extends layout

block content
    // main content start
    #page-wrapper
        .main-page
            .tables
                h2.title1 Owners :
                    |
                    |
                    = size

                .table-responsive.bs-example.widget-shadow
                    // h4 Responsive Table:
                    if size > 0
                        table.table.table-bordered
                            thead
                                tr
                                    th Picture
                                    th First name
                                    th Last name
                                    th Email
                                    th Phone
                                    th Car
                                    th Brand
                                    th Model
                                    th License No.
                                    th Actions
                            tbody
                                each val, index in owners
                                    tr
                                        td
                                            img(src=val.avatar, alt='', width='50px', height='50px')
                                        td= val.firstName
                                        td= val.lastName
                                        td= val.email
                                        td= val.phone
                                        td
                                            img(src=val.carImage, alt='', width='80px', height='50px')
                                        td= val.brand
                                        td= val.model
                                        td= val.licenseNumber
                                        td
                                            a.btn.btn-danger(type='button', href='/owners/' + index + '/delete') Delete
                    else
                        h4.title1 No owners found!